<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="moviesAddTitulo"></h1>
    <br>
    <section id="formulario" >
        <article >
            <form action="/movies/create" id="form" method="POST">
                <label for="title">Titulo </label>
                <p><input type="text" name="title" id="title"></p>
                <span style="color: red; font-family: 'sans-serif';" id="tituloErrors"></span>

                <label for="rating">Calificación </label>
                <p><input type="number" name="rating" id="rating"></p>
                <span style="color: red; font-family: 'sans-serif';" id="calificacionErrors"></span>

                <label for="awards">Premios </label>
                <p><input type="number" name="awards" id="awards"></p>
                <span style="color: red; font-family: 'sans-serif';" id="premiosErrors"></span>

                <label for="release_date">Fecha de creación </label>
                <p><input type="date" name="release_date" id="release_date"></p>
                <span style="color: red; font-family: 'sans-serif';" id="fechaErrors"></span>

                <label for="length">Duración </label>
                <p><input type="number" name="length" id="length"></p>
                <span style="color: red; font-family: 'sans-serif';" id="duracionErrors"></span>

                <label for="genreID">Género </label>
                <p>
                    <select name="genre_id" id="genre_id">
                        <option value="" disabled selected>- Seleccione el género - </option>
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>"><%= genre.name %></option>
                        <% }); %>
                    </select>
                </p>
                <span style="color: red; font-family: 'sans-serif';" id="generoErrors"></span>

                <br>
                <span style="color: red; font-family: 'sans-serif';" id="enviarErrors"></span>
                <p> <button class="botonAgregar" type="submit">Agregar</button>
                
                <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
            </form>
        </article>
    </section>

    <!-- Script -->
    <script src="/js/moviesAddValidation.js"></script>
</body>
</html>